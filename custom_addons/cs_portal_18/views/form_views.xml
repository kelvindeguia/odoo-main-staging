    </record>
    <!-- REQUISITION END -->

    <!-- RECRUITMENT REQUISITION START FORM -->
    <record
            id="hr_requisition_view_form" model="ir.ui.view">
            <field name="name">Requisition Form</field>
            <field name="model">hr.requisition</field>
            <field name="arch" type="xml">
                <form string="Requisition Form" class="o_applicant_form">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                        </div>
                        <div class="oe_title">
                            <div>
                                <label for="x_department_id" />
                                <h1>
                                    <field name="x_department_id" width="50%" placeholder="Required"
                                        required="1"
                                        options="{'no_create': True, 'no_create_edit':True}" />
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group string="Requisition Information">
                                <field name="x_job_name"
                                    domain="[('department_id', '=', x_department_id)]"
                                    placeholder="Required" required="1"
                                    options="{'no_create': True, 'no_create_edit':True}" />
                                <!-- <field name="x_job_description" required="1"
                                    filename="job_description_file_name" /> -->
                                <field name="job_description_ids" widget="many2many_binary"/>
                                <field name="job_description_file_name" invisible="1" />
                                <!-- <field name="x_calibration_notes"
                                    filename="calibration_notes_file_name" /> -->
                                <field name="calibration_notes_ids" widget="many2many_binary"/>
                                <field name="calibration_notes_file_name" invisible="1" />
                                <field name="company" required="1" />
                                <field name="career_level" />
                                <field name="audio_clip_needed" widget="boolean_toggle" />
                                <field name="assessment_needed" widget="boolean_toggle" />
                                <field name="priority"/>
                                <field name="calibration_needed" widget="boolean_toggle" />
                                <field name="x_calibration_call_availability" />
                                <field name="calibration_date" />
                                <field name="start_date" />
                                <field name="x_client_classification" />
                                <field name="x_job_classification" required="1" />
                                <field name="x_recruitment_support_team" />
                                <field name="x_req_position_classification" />
                                <field name="x_industry"
                                    groups="hr_recruitment.group_hr_recruitment_user,base.group_system" />
                                <field name="x_salary_package" />
                                <field name="client_website" />
                            </group>
                            <group string="Requisition SLA and Status">
                                <field name="x_req_id" />
                                <field name="x_requisition_status" />
                                <field name="date_cancelled"/>
                                <field name="date_onhold" />
                                <field name="date_filled" />
                                <field name="date_reopen" />
                                <field name="cancelled_reason"/>
                                <h3>Old SLA</h3>
                                <field name="sourcing_date" />
                                <field name="testing_datetime" />
                                <field name="date_source" />
                                <field name="end_date" />
                                <field name="days_ageing" />
                                <field name="hold_counter" />
                                <field name="x_onhold_cancelled_remarks"/>
                                <field name="create_date" string="Date Submitted" />
                                <field name="x_req_sla" style="font-weight: bold;font-size: 15pt"
                                    decoration-success="x_req_sla &gt; 0"
                                    decoration-danger="x_req_sla &gt; 60"
                                    decoration-warning="x_req_sla &gt; 30" />
                                <field name="sla_met"/>
                                <field name="days_to_fill" />
                                <field name="x_req_sla_total" groups="base.group_system" />
                                <field name="x_onhold_days" groups="base.group_system" />
                                <field name="x_onhold_start_date" groups="base.group_system" />
                                <field name="x_onhold_end_date" groups="base.group_system" />
                                <field name="x_old_onhold_checker" groups="base.group_system" />
                                <field name="x_onhold_counter" groups="base.group_system" />
                                <field name="x_department_name" groups="base.group_system" />
                                <field name="qs_department_name" groups="base.group_system" />
                                <field name="qs_job_title" groups="base.group_system" />
                                <field name="create_uid" />
                                <field name="x_requisition_url" groups="base.group_system" />
                                <h3>New SLA</h3>
                                <field name="req_ageing" />
                                <field name="req_ageing_total" groups="base.group_system"/>
                                <field name="days_onhold" groups="base.group_system"/>
                                <field name="hold_start_date" groups="base.group_system"/>
                                <field name="hold_end_date" groups="base.group_system"/>
                                <field name="old_onhold_checker" groups="base.group_system"/>
                                <field name="hold_end_date" groups="base.group_system"/>
                            </group>
                            <group string="Staffing Overview">
                                <field name="x_no_of_demand" />
                                <field name="x_remaining_vacancy"
                                    groups="hr_recruitment.group_hr_recruitment_user,base.group_system" />
                                <field name="x_filled"
                                    groups="hr_recruitment.group_hr_recruitment_user,base.group_system" />
                                <field name="projected_headcount" />
                                <field name="projected_neo_date" />
                            </group>
                            <group string="Recruitment and Client POC">
                                <field name="x_recruitment_requestor" />
                                <field name="x_hiring_manager" />
                                <field name="sec_hiring_manager" />
                                <field name="x_hiring_manager_email" />
                                <field name="x_recruitment_manager"
                                    groups="hr_recruitment.group_hr_recruitment_user,base.group_system" />
                                <field name="x_assigned_recruiter"
                                    groups="hr_recruitment.group_hr_recruitment_user,base.group_system" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Requisition Remarks">
                                <field name="requisition_remarks" placeholder="Requisition Remarks" />
                            </page>
                            <page string="Other">
                                <group>
                                    <field name="x_onhold_logs" style="width:50%" />
                                </group>
                            </page>
                            <page string="Update Logs">
                                <group>
                                    <field name="update_logs"/>
                                </group>
                            </page>
                            <page string="Hires">
                                <!-- <button name="compute_hired_applicants" string="Hires" type="object"
                                    class="btn-primary me-5 mb-5" />
                                <button name="compute_all_applicants" string="All Applicants"
                                    type="object" class="btn-primary mb-5" /> -->
                                <field name="applicant_ids" readonly="1" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    <!-- RECRUITMENT REQUISITION END -->

    <!-- REVENUE GENERATION START -->

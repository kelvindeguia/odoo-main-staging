<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!--    ### CLIENTS START: FORM VIEW ###-->
    <record id="cs_portal_clients_form" model="ir.ui.view">
        <field name="name">cs.portal.clients.form</field>
        <field name="model">cs.portal.main</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                    <div class="oe_title">
                    </div>
                    <div>
                        <label for="account_name"/>
                        <h1>
                            <field name="account_name" width="100%" placeholder="Required" required="1"/>
                            <field name="kanban_state" widget="state_selection" />
                        </h1>
                    
                    </div>
                    <hr style="height:5px;border=width:0;color:gray;background-color:gray" invisible="not edit_attachments"/>
                    <group string="Company Profile" id="cs_portal_main_company_profile" invisible="not edit_poc or not edit_client_interactions or not edit_business_reviews or not edit_attrition or not edit_requisition or not edit_revenue_generation or not edit_attachments">
                        <group>
                            <!-- <button name="compute_edit_information" string="Edit" type="object" class="oe_highlight" invisible="not edit"/>
                            <button name="compute_save_information" string="Save" type="object" class="oe_highlight" invisible="edit" style="margin-bottom: 50px;"/> -->
                            <field name="ceo" />
                            <field name="website" widget="url" placeholder="samplewebsite.com"/>
                            <field name="year_founded" placeholder="Enter value here"/>
                            <field name="contract_length_id" />
                            <field name="contract_start_date" placeholder="Select Date here" />
                            <field name="contact_phone_number" placeholder="XXX-XXX-XXXX" widget="phone" />
                            <field name="telephone_number" placeholder="Enter value here" widget="phone" />
                            <field name="contact_email" placeholder="sample@gmail.com" />
                            <field name="company_headcount" />
                        </group>
                        <group>
                            <field name="industry" />
                            <field name="country_id" placeholder="Select from options" />
                            <field name="state_id" placeholder="Select from options" />
                            <field name="city" placeholder="Enter value here" />
                            <field name="street" placeholder="Enter value here" />
                            <field name="street_number" />
                            <field name="zip_code" />
                            <!-- <field name="address" readonly="edit"/> -->
                            
                        </group>
                        <group string="Additional Details ">
                            <field name="account_owner_id" domain="[('active_account_owner', '=', True)]" placeholder="Enter value here"  />
                            <field name="secondary_owner_id" domain="[('active_secondary_owner', '=', True)]" placeholder="Enter value here" />
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Enter value here" />
                            <field name="record_id" groups="base.group_system"/>
                        </group>
                        <!-- <group string="Company Address">
                            <field name="street_number" readonly="edit"/>
                            <field name="street_name" readonly="edit"/>
                            <field name="city" readonly="edit"/>
                            <field name="state" readonly="edit"/>
                        </group> -->
                    </group>
                    <group string="Point of Contact" id="cs_portal_main_poc_information" invisible="not edit or not edit_client_interactions or not edit_business_reviews or not edit_attrition or not edit_requisition or not edit_revenue_generation or not edit_attachments">
                        <!-- <button name="compute_edit_poc" string="Edit" type="object" class="oe_highlight" invisible="not edit_poc "/>
                        <button name="compute_save_poc" string="Save" type="object" class="oe_highlight" invisible="edit_poc "/> -->
                             <field name="poc_information_ids" readonly="edit_poc"/> 
                        <!--<field name="poc_information_ids"/>-->
                    </group>
                    <group string="Client Interactions" id="cs_portal_main_client_interactions" invisible="not edit or not edit_poc or not edit_business_reviews or not edit_attrition or not edit_requisition or not edit_revenue_generation or not edit_attachments">
                            <!-- <field name="client_interactions_ids" readonly="edit"/> -->
                            <!-- <button name="compute_edit_client_interactions" string="Edit" type="object" class="oe_highlight" invisible="not edit_client_interactions"/>
                            <button name="compute_save_client_interactions" string="Save" type="object" class="oe_highlight" invisible="edit_client_interactions"/> -->
                            <field name="client_interactions_ids" readonly="edit_client_interactions"/>
                    </group>
                    <group string="Business Reviews" id="cs_portal_main_business_reviews" invisible="not edit or not edit_poc or not edit_client_interactions or not edit_attrition or not edit_requisition or not edit_revenue_generation or not edit_attachments">
                            <!-- <button name="compute_edit_business_reviews" string="Edit" type="object" class="oe_highlight" invisible="not edit_business_reviews"/>
                            <button name="compute_save_business_reviews" string="Save" type="object" class="oe_highlight" invisible="edit_business_reviews"/> -->
                            <!-- <field name="business_reviews_ids" readonly="edit"/> -->
                            <field name="business_reviews_ids" readonly="edit_business_reviews"/>
                    </group>
                    <group string="Attrition" id="cs_portal_main_attrition" invisible="not edit or not edit_poc or not edit_client_interactions or not edit_business_reviews or not edit_requisition or not edit_revenue_generation or not edit_attachments">
                            <!-- <button name="compute_edit_attrition" string="Edit" type="object" class="oe_highlight" invisible="not edit_attrition"/>
                            <button name="compute_save_attrition" string="Save" type="object" class="oe_highlight" invisible="edit_attrition"/> -->
                            <!-- <field name="attrition_ids" readonly="edit"/> -->
                            <field name="attrition_ids" readonly="edit_attrition"/>
                    </group>
                    <group string="Requisitions" id="cs_portal_main_hr_requisitions" invisible="not edit or not edit_poc or not edit_client_interactions or not edit_business_reviews or not edit_attrition or not edit_revenue_generation or not edit_attachments">
                            <!-- <field name="hr_requisitions_ids" readonly="edit"/> -->
                            <!-- <button name="compute_edit_requisition" string="Edit" type="object" class="oe_highlight" invisible="not edit_requisition"/>
                            <button name="compute_save_requisition" string="Save" type="object" class="oe_highlight" invisible="edit_requisition"/> -->
                            <field name="hr_requisitions_ids" readonly="edit_requisition"/>
                    </group>
                    <group string="Revenue Generation" id="cs_portal_main_revenue_generation" invisible="not edit or not edit_poc or not edit_client_interactions or not edit_business_reviews or not edit_attrition or not edit_requisition or not edit_attachments">
                            <!-- <field name="revenue_generation_ids" readonly="edit"/> -->
                            <!-- <button name="compute_edit_revenue_generation" string="Edit" type="object" class="oe_highlight" invisible="not edit_revenue_generation"/>
                            <button name="compute_save_revenue_generation" string="Save" type="object" class="oe_highlight" invisible="edit_revenue_generation"/> -->
                            <!-- <field name="type_of_revenue_generation_ids" readonly="edit_revenue_generation" widget="many2many_checkboxes"/> -->
                            <field name="type_of_revenue_generation_id" />
                            <field name="revenue_generation_ids" />
                            <field name="revenue_generation_idss" />
                    </group>
                    
                    <hr style="height:5px;border=width:0;color:gray;background-color:gray" invisible="not edit_attachments"/>
                    <h3 invisible="not edit or not edit_poc or not edit_client_interactions or not edit_business_reviews or not edit_attrition or not edit_requisition or not edit_revenue_generation">Attachments</h3>
                    <div invisible="not edit or not edit_poc or not edit_client_interactions or not edit_business_reviews or not edit_attrition or not edit_requisition or not edit_revenue_generation">
                        <!-- <button name="compute_edit_attachments" string="Edit" type="object" class="oe_highlight" invisible="not edit_attachments"/>
                        <button name="compute_save_attachments" string="Save" type="object" class="oe_highlight" invisible="edit_attachments"/> -->
                    </div>
                    <notebook invisible="not edit or not edit_poc or not edit_client_interactions or not edit_business_reviews or not edit_attrition or not edit_requisition or not edit_revenue_generation">
                        <page name="Job Descriptions" id="cs_portal_jd_attachments">
                            <field name="jd_attachment_ids" widget="many2many_binary" readonly="edit_attachments"/>
                        </page>
                        <page name="Minutes of the Meeting" id="cs_portal_mom_attachments">
                            <field name="mom_attachment_ids" widget="many2many_binary" readonly="edit_attachments"/>
                        </page>
                        <page name="Calibration Notes" id="cs_portal_cn_attachments">
                            <field name="cn_attachment_ids" widget="many2many_binary" readonly="edit_attachments"/>
                        </page>
                        <page name="Client Validation" id="cs_portal_cv_attachments">
                            <field name="cv_attachment_ids" widget="many2many_binary" readonly="edit_attachments"/>
                        </page>
                    </notebook>
                </form>
        </field>
    </record>

    <!--    ### POC INFORMATION START: FORM VIEW ###-->
    <record id="cs_portal_poc_information_form" model="ir.ui.view">
        <field name="name">cs.portal.poc.information.form</field>
        <field name="model">cs.portal.poc.information</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

    <record id="cs_portal_search_view" model="ir.ui.view">
        <field name="name">cs.search.view</field>
        <field name="model">cs.portal.main</field>
        <field name="arch" type="xml">
            <search string="Clients">
                <field name="account_name" string="Account Name" />
                <filter string="My Accounts" name="my_accounts"

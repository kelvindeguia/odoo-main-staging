<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_hr_recruitment_channel">
            <field name="name">Channel</field>
            <field name="res_model">hr.recruitment.channel</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref=""/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Want to see the different channels of applications?
                </p><p>
                    Channel
                </p>
            </field>
        </record>

        <!-- Channel Tree View -->
    <record model="ir.ui.view" id="hr_channel_view_tree">
        <field name="name">Channel Tree</field>
        <field name="model">hr.recruitment.channel</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name" />
            </list>
        </field>
    </record>

    </data>
</odoo>
